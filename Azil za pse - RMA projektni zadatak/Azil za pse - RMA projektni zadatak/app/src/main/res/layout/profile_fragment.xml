<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <Button
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/ic_arrow_back"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="15dp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/containerHolder"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="50dp"
        app:cardElevation="0dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/imageHolder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="10dp"
           android:layout_gravity="center_vertical|center_horizontal"
            app:cardCornerRadius="60dp"
            >
        <ImageView
            android:id="@+id/iconProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dogo1"
            android:scaleType="fitCenter"
            />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/usernameHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/containerHolder"
        android:layout_marginTop="10dp"
        android:text="Username"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/usernameHolder"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border"
        android:fontFamily="@font/exo_2"
        android:textStyle="bold"
        android:text="@string/log_out"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logoutButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:fontFamily="@font/exo_2"
        android:textStyle="bold"
        android:text="@string/upload_picture"
        android:textColor="@color/black"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/uploadButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dogsRecylcer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
    </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>